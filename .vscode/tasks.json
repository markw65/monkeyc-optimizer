{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build-debug",
      "group": { "isDefault": true, "kind": "build" },
      "problemMatcher": [],
      "label": "npm: build-debug",
      "detail": "webpack --mode development"
    },
    {
      "type": "npm",
      "script": "watch",
      "group": "none",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "buildWatchers",
        "close": false
      },
      "problemMatcher": [
        "$tsc",
        {
          "applyTo": "allDocuments",
          "fileLocation": "relative",
          "pattern": [
            {
              "regexp": "\\[(ERROR|WARNING|INFO)\\].*? (\\S.*)",
              "severity": 1,
              "message": 2
            },
            { "regexp": "^(\\s*)$" },
            {
              "regexp": "^\\s*(.+):(\\d+):(\\d+):",
              "file": 1,
              "line": 2,
              "column": 3
            }
          ],
          "background": {
            "beginsPattern": " - Build active$",
            "endsPattern": " - Build inactive$"
          }
        }
      ],

      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
