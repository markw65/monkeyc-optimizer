{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "build",
    "module": "esnext",
    "target": "esnext",
    "checkJs": true /* Typecheck .js files. */,
    "lib": ["esnext"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "declaration": true,
    "useUnknownInCatchVariables": true,
    "strict": true,
    "paths": {
      "src/*.peggy": ["src/*.d.ts"]
    }
  },

  "include": ["src/**/*.ts", "src/*.peggy"],
  "exclude": [
    "build",
    "node_modules",
    "esbuild.js",
    "test/projects",
    "test/OptimizerTests"
  ]
}
