{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "build",
    "module": "es2020",
    "target": "es2020",
    "checkJs": true /* Typecheck .js files. */,
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "declaration": true,
    "useUnknownInCatchVariables": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["build", "node_modules", "webpack.config.js", "test"]
}
